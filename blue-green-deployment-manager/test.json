[
  {
    "endpoints": "hotel-search,hotel-recommend,hotel-reserve,hotel-user",
    "name": "hotel-frontend",
    "version": 1,
    "replicaCount": 1,
    "image": {
      "image": "arearnest7/hotel-frontend:macropod",
      "pullPolicy": "IfNotPresent"
    },
    "env": [{
      "name": "SERVICE_TYPE",
      "value": "HTTP"
      },
      {
      "name": "GRPC_THREAD",
      "value": "10"
      }, 
      {
        "name": "FUNC_PORT",
        "value": "5000"
      }
    ],
    "service": {
      "type": "ClusterIP",
      "port": 80,
      "targetPort": 5000
    },
    "ingress": {
      "host": "hotel.example.com"
    }
  },
